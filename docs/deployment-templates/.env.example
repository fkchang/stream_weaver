# .env.example - Environment Variables Template
#
# Copy this file to .env and fill in your values
# Add .env to .gitignore to keep secrets safe
#
# For development, use 'dotenv' gem:
#   gem install dotenv
#   require 'dotenv/load' in your app

# =============================================================================
# REQUIRED
# =============================================================================

# Application environment (development, test, production)
RACK_ENV=development

# Session secret key (generate with: openssl rand -hex 64)
# MUST be 64+ characters for security
SESSION_SECRET=your-super-secret-session-key-minimum-64-characters-change-this-in-production

# =============================================================================
# DATABASE
# =============================================================================

# SQLite (development)
# DATABASE_URL=sqlite://db/development.sqlite3

# PostgreSQL (production)
# Format: postgresql://username:password@host:port/database
# DATABASE_URL=postgresql://user:password@localhost:5432/myapp_production

# =============================================================================
# AUTHENTICATION
# =============================================================================

# Basic HTTP Auth (for simple admin panels)
# ADMIN_USER=admin
# ADMIN_PASS=secretpassword

# OAuth (GitHub, Google, etc.)
# GITHUB_KEY=your_github_oauth_key
# GITHUB_SECRET=your_github_oauth_secret
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret

# =============================================================================
# OPTIONAL FEATURES
# =============================================================================

# Force HTTPS in production
# FORCE_SSL=true

# Application port (usually set by platform)
# PORT=4567

# Application host
# HOST=0.0.0.0

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================

# Email (e.g., SendGrid, Mailgun)
# SENDGRID_API_KEY=your_sendgrid_key
# SMTP_ADDRESS=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_password

# Error tracking (e.g., Sentry, Rollbar)
# SENTRY_DSN=https://your-sentry-dsn
# ROLLBAR_ACCESS_TOKEN=your_rollbar_token

# File storage (e.g., S3, Cloudinary)
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# AWS_REGION=us-east-1
# S3_BUCKET=your-bucket-name

# Redis (for caching, sessions, background jobs)
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# CUSTOM APPLICATION VARIABLES
# =============================================================================

# Add your application-specific environment variables here
# MY_API_KEY=your_api_key
# FEATURE_FLAG_NEW_UI=true
